<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tao.jiang.demo.repository.myRepository.mybatis.user.UserMapper">
    <!-- 使用了类型别名 -->
    <select id="findUserById" resultType="User" parameterType="string">
        select * from user where id=#{xx}
    </select>

    <select id="findByUserName" resultType="User" parameterType="string">
        select * from user where userName=#{xx}
    </select>

    <select id="findUser" resultType="User" parameterType="string">
        select * from user where id=#{id}
        <if test="userName!=null">
            and userName=#{userName}
        </if>
    </select>

    <insert id="save" parameterType="User" useGeneratedKeys="true"  keyProperty="id">
        insert into user(userName, password, auth, createTime, lastLogin)
        values(#{userName}, #{password}, #{auth}, #{createTime}, #{lastLogin})
    </insert>

    <update id="updateLastLogin">
        update user set lastLogin=#{lastLogin}
        where id=#{userId}
    </update>
</mapper>